<%= form_for [:admin, @portfolio_item] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @portfolio_item,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:description].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:description].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class='field'>
    <%= f.label :screenshot -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :screenshot_id,
          :image => @portfolio_item.screenshot,
          :toggle_image_display => false
        } %>
  </div>
  
  <div class='field'>
    <%= f.label :link -%>
    <%= f.text_field :link  -%>
  </div>
  
  <div class='field'>
    <%= f.label :published_at -%>
    <%= f.datetime_select :published_at  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.portfolio_items.portfolio_item'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @portfolio_item.title)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
