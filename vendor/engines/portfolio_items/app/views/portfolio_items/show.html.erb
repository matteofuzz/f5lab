<% content_for :body_content_title do %>
  <%= @portfolio_item.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>  
    <p>
      <%= link_to image_fu(@portfolio_item.screenshot, '600x800'), @portfolio_item.link %>
    </p>
  </section> 
  <section>
    <p>
      <%=raw @portfolio_item.description %>
    </p>
  </section>
  <section>
    Link: <%= link_to @portfolio_item.link, @portfolio_item.url %>
  </section>
  <section>
    <%= @portfolio_item.published_at.strftime "#{t(:published_at).capitalize} %d %B %Y" %>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="portfolio_items">
      <% @portfolio_items.each do |portfolio_item| %>
        <li>
          <%= link_to image_tag(portfolio_item.screenshot.thumbnail('150x100#').url)+portfolio_item.title.truncate(20, :separator => ' '), portfolio_item_path(portfolio_item) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
